  Bienvenido {{user}}

 		<a class="btn btn-outline-success" type="submit" href="/logout">Logout</a>

</div>

{{else}}
	<nav class="navbar navbar-light bg-light justify-content-between" style="padding: 20px;">
	<a class="navbar-brand">CoderHouse-Alexis Caballero</a>
